<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aghajari.sample.emojiview">

    <application
        android:allowBackup="true"
        android:name=".MyApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.EmojiActivity"
            android:windowSoftInputMode="adjustResize|adjustUnspecified">
        </activity>

        <activity android:name=".activity.EmojiPopupViewActivity"
            android:windowSoftInputMode="adjustResize|adjustNothing">
        </activity>

        <activity android:name=".activity.DarkActivity"
            android:theme="@style/DarkAppTheme"
            android:windowSoftInputMode="adjustResize|adjustNothing">
        </activity>

    </application>

    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>